{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "@typescript-eslint"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": ["eslint:recommended"],
      "rules": {
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always"],
        "object-curly-spacing": ["error", "never"]
      }
    },
    {
      "files": ["ui/onHover/**/*.jsx", "ui/onHover/**/*.js"],
      "rules": {}
    }
  ]
}
